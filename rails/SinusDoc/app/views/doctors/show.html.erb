<p id="notice"><%= notice %><%= link_to "Sign out", destroy_doctor_session_path, :method => :delete %></p>
<div class="cent">
<h1>PATIENT DETAILS</h1>

<table>
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Chronic Sinusitis history</th>
    <th>Average chronic discomfort score</th>
    <th>Acute Sinusitis history</th>
  </thead>
  <tbody>
    <% current_doctor.patient.each do |p| %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.email %></td>
      <td>
        <% if p.chronic.size > 0 %>
        <table>
        <thead>
          <tr>
            <th>Date recorded</th>
            <th>Discomfort score</th>
          </tr>
        </thead>
        <tbody>
          <%p.chronic.each do |c| %>
          <tr>
            <td><%= c.date_created %></td>
            <td><%= c.discomfort_score %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
        <% end %>
      </td>
    <td><%= p.chronic.average(:discomfort_score) %></td>

    <td>
      <% if p.chronic.size > 0 %>
      <table>
        <thead>
          <tr>
            <th>Date recorded</th>
            <th>Answer</th>
          </tr>
        </thead>
        <tbody>
          <%p.acute.each do |a| %>
          <tr>
            <td><%= a.date_created %></td>
            <td><%= a.answer %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </td>
    <tr></tr>
      <% end %>
      </tr>
      </tbody>

    </table>
</div>
<p class="cent"><%= link_to 'Back', doctors_path %></p>
</div>
